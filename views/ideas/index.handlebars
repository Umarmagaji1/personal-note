{{#each ideas}}
<div class="card mb-2">
    <div class="card-body">
        <h2>{{title}}</h2>
        <p>{{details}}</p>
    </div>
    <a href="/ideas/edit/{{id}}" class="btn btn-primary btn-block mb-2">Edit</a>
    <form method="POST" action="/ideas/{{id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" type="submit" class="btn btn-danger btn-block">Delete</button>
    </form>
</div>
{{/each}}