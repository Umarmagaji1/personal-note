<h1>Edit Note</h1>
<form method="POST" action="/ideas/{{idea.id}}?_method=PUT">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" placeholder="Title" name="title" value="{{idea.title}}" required>
    </div>
    <div class="form-group">
        <label for="details">Details</label>
        <input type="text" class="form-control" placeholder="Details" name="details" value="{{idea.details}}" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>